# Maintainer: Buce <dmbuce@gmail.com>

pkgname=buceutils-git
pkgver=20130207
pkgrel=1
pkgdesc="A collection of simple utilities."
arch=(any)
url="https://github.com/DMBuce/buceutils"
license=('unknown')
groups=()
depends=('tar' 'p7zip' 'gzip' 'bzip2' 'unrar' 'xz' 'unzip' 'java-environment' 'rpmextract'
         'cabextract' 'vim' 'curl' 'openssh' 'diffutils' 'alsa-utils'
         'xorg-xrandr' 'awk' 'imagemagick')
makedepends=('git')
provides=(buceutils)
conflicts=(buceutils)
replaces=(buceutils)
backup=()
options=()
install=
source=()
noextract=()
md5sums=()

_gitroot='git://github.com/DMBuce/buceutils.git'
_gitname='buceutils'

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
  sed -i '/^prefix/        s#/usr/local#/usr#
          /^sysconfdir/    s#=.*#= /etc#
          /^localstatedir/ s#=.*#= /var#' Makefile
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
